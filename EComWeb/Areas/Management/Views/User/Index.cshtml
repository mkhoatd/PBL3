@using Microsoft.AspNetCore.Identity;
@model List<ECom.Models.ApplicationUser>

@{
    Layout = "/Areas/Management/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "User List";
}

<section class="breadcrumb-section set-bg" data-setbg="/img/product/details/iphone13promax/apple-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

<br/>

<div class="container">
<table class="table table-striped" id="userTable">
    <thead>
    <tr>
        <th>User</th><th>Email</th><th style="width:10%">Actions</th>
    </tr>
    </thead>
  
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>
                <div class="row">
                    <div class="col-sm">
                        <a>
                            @user.UserName
                        </a>
                        <br/>
                        <small>
                            @user.Id
                        </small>
                    </div>
                </div>
            </td>
            <td>
                <a>
                    @user.Email
                </a>
            </td>
            <td>
                <a asp-controller="UserRoles" asp-action="Index" asp-route-userId="@user.Id" class="dropdown-item">Manage Roles</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
